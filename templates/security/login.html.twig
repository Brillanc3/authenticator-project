{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    

    <form action="{{path('security_signin')}}" method="post">
        <label for="email">Email/Username :</label>
        <input type="text" name="_username" id="username" value="{{ username }}" required>

        <label for="password">Password :</label>
        <input type="password" name="_password" id="password" required>

        <button type="submit">Se connecter</button>
    </form>
{% endblock %}
